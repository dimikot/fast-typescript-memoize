{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2019",
      "es2021.WeakRef"
    ],
    "incremental": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2018",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true
  }
}
